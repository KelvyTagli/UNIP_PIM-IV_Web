@model Holerite
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
	<div class="dashboard">
		<div>
			<h1>Visão geral</h1>
			<div id="search">
				<ion-icon name="search-outline"></ion-icon>
				<input type="text" placeholder="Pesquisar">
			</div>
		</div>
		<div class="graficos">
			<i class="ph-thin ph-currency-circle-dollar" style="font-size:50px;"></i>
			<h3>Ganhos mensais</h3>
			<canvas id="myChart"></canvas>
		</div>
	</div>
</div>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    let SalarioLiquido = ['@Model.SalarioLiquido'];
    console.log(SalarioLiquido);
    const ctx = document.getElementById('myChart');
    new Chart(ctx, {
        type: 'line',
        data: {
            labels: ['Jan', 'Fev', 'Mar', 'Abr', 'Mai', 'Jun', 'Jul', 'Ago', 'Set', 'Out', 'Nov', 'Dez'],
            datasets: [{
                label: ' Salário',
                data: [parseFloat(SalarioLiquido)],
                borderWidth: 1,
                borderColor: '#f8f9fc',
                tension: 0.1,
                backgroundColor: '#f8f9fc',
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>
